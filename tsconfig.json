{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["DOM", "ES2021"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "typeRoots": [
      "./node_modules/@types",
      "./ui/types"
    ],
    "paths": {
      "react-window": ["./ui/types/react-window.d.ts"],
      "react-window/*": ["./ui/types/react-window.d.ts"]
    },
    "types": [
      "react",
      "react-dom",
      "chrome",
      "node"
    ]
  },
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.d.ts" ],
  "exclude": ["dist", "node_modules"]
}